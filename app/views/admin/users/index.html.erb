<h1>會員清單</h1>
<%= paginate @users %>
<table>
  <thead>
    <tr>
      <td>名子</td>
      <td>Email</td>
      <td>權限</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.authority %></td>
      <td>
        <%= link_to "資料編輯", edit_admin_user_path(user) %>
        <%= link_to "會員刪除", admin_user_path(user), method: "delete", data: { confirm: "確認刪除？" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
